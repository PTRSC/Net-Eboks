#! /bin/sh
# PROVIDE: eboks2pop
# REQUIRE: DAEMON
# KEYWORD: shutdown
# Add the following lines to /etc/rc.conf to enable eboks2pop:
# eboks2pop_enable="YES"

. /etc/rc.subr
name="eboks2pop"
rcvar="eboks2pop_enable"
load_rc_config $name
command="/usr/sbin/daemon"
command_args="-p /var/run/eboks2pop.pid /usr/local/bin/perl /usr/local/bin/eboks2pop -a 127.0.0.1"
run_rc_command "$1"
